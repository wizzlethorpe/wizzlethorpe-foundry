<div class="wizzlethorpe-sidebar">
  <!-- Header Section -->
  <div class="sidebar-header">
    <img src="modules/wizzlethorpe-labs/images/wizzlethorpe-logo.png" alt="Wizzlethorpe Labs" class="sidebar-logo" onerror="this.style.display='none'" />
    <h2>{{localize "WIZZLETHORPE.Title"}}</h2>
  </div>

  <!-- Account Status -->
  <div class="sidebar-section account-section">
    {{#if isLinked}}
    <div class="account-badge linked">
      {{#if account.imageUrl}}
      <img src="{{account.imageUrl}}" alt="{{account.name}}" class="account-mini-avatar" />
      {{else}}
      <i class="fas fa-user-circle"></i>
      {{/if}}
      <span class="account-mini-name">{{account.name}}</span>
      <span class="tier-badge {{tierBadgeClass}}">{{account.tierName}}</span>
    </div>
    {{else}}
    <div class="account-badge not-linked">
      <i class="fas fa-user-slash"></i>
      <span>Not Linked</span>
    </div>
    {{/if}}
    <button type="button" class="manage-account-btn" data-action="manageAccount">
      <i class="fas fa-cog"></i> {{localize "WIZZLETHORPE.Sidebar.ManageAccount"}}
    </button>
  </div>

  <!-- Quickbrush Section -->
  <div class="sidebar-section">
    <h3><i class="fas fa-palette"></i> {{localize "QUICKBRUSH.Title"}}</h3>
    <p class="section-description">{{localize "WIZZLETHORPE.Sidebar.QuickbrushDesc"}}</p>

    <div class="button-group">
      <button type="button" class="wiz-btn primary" data-action="quickbrushGenerate">
        <i class="fas fa-magic"></i> {{localize "WIZZLETHORPE.Sidebar.GenerateImage"}}
      </button>
      <button type="button" class="wiz-btn secondary" data-action="openGallery">
        <i class="fas fa-images"></i> {{localize "WIZZLETHORPE.Sidebar.OpenGallery"}}
      </button>
    </div>

    <div class="quick-generate">
      <span class="quick-label">{{localize "WIZZLETHORPE.Sidebar.QuickGenerate"}}</span>
      <div class="quick-buttons">
        <button type="button" class="quick-btn" data-action="quickGenerate" data-type="character" title="Character">
          üé≠
        </button>
        <button type="button" class="quick-btn" data-action="quickGenerate" data-type="scene" title="Scene">
          üåÑ
        </button>
        <button type="button" class="quick-btn" data-action="quickGenerate" data-type="creature" title="Creature">
          üêâ
        </button>
        <button type="button" class="quick-btn" data-action="quickGenerate" data-type="item" title="Item">
          üó°Ô∏è
        </button>
      </div>
    </div>
  </div>

  <!-- Languages Section -->
  <div class="sidebar-section">
    <h3><i class="fas fa-language"></i> {{localize "LANGUAGES.Title"}}</h3>
    <p class="section-description">{{localize "WIZZLETHORPE.Sidebar.LanguagesDesc"}}</p>

    <div class="button-group">
      <button type="button" class="wiz-btn primary" data-action="openTranslator">
        <i class="fas fa-language"></i> {{localize "LANGUAGES.ButtonLabel"}}
      </button>
      <button type="button" class="wiz-btn secondary" data-action="importGrammars">
        <i class="fas fa-book"></i> {{localize "LANGUAGES.ImportGrammars"}}
      </button>
    </div>
  </div>

  <!-- Bixby's Cocktails Section -->
  <div class="sidebar-section">
    <h3><i class="fas fa-glass-martini-alt"></i> {{localize "COCKTAILS.Title"}}</h3>
    <p class="section-description">{{localize "WIZZLETHORPE.Sidebar.CocktailsDesc"}}</p>

    <div class="button-group">
      <button type="button" class="wiz-btn primary" data-action="importCocktails">
        <i class="fas fa-download"></i> {{localize "COCKTAILS.ButtonLabel"}}
      </button>
    </div>

    {{#if isLinked}}
    <div class="import-options">
      <span class="options-label">{{localize "WIZZLETHORPE.Sidebar.ImportSpecific"}}</span>
      <div class="import-buttons">
        <button type="button" class="import-btn" data-action="importSpecific" data-type="cocktails" title="Cocktails only">
          <i class="fas fa-flask"></i>
        </button>
        <button type="button" class="import-btn" data-action="importSpecific" data-type="ingredients" title="Ingredients only">
          <i class="fas fa-leaf"></i>
        </button>
        <button type="button" class="import-btn" data-action="importSpecific" data-type="liquors" title="Liquors only">
          <i class="fas fa-wine-bottle"></i>
        </button>
        <button type="button" class="import-btn" data-action="importSpecific" data-type="tables" title="Roll tables only">
          <i class="fas fa-dice-d20"></i>
        </button>
      </div>
    </div>
    {{/if}}
  </div>

  <!-- Footer -->
  <div class="sidebar-footer">
    <a href="https://wizzlethorpe.com" target="_blank">
      <i class="fas fa-external-link-alt"></i> wizzlethorpe.com
    </a>
    <span class="separator">|</span>
    <a href="https://www.patreon.com/wizzlethorpe" target="_blank">
      <i class="fab fa-patreon"></i> Patreon
    </a>
  </div>
</div>
